<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyingMaui.StackLayoutDemo"
             Title="StackLayoutDemo">

    <VerticalStackLayout Margin="20">
        <Frame Padding="5">
            <HorizontalStackLayout Spacing="10">
                <BoxView
                    Color="Red"
                    WidthRequest="40"/>
                <Label
                    Text="Red"
                    FontSize="18"/>
            </HorizontalStackLayout>
        </Frame>
        <Frame Padding="5">
            <HorizontalStackLayout Spacing="10">
                <BoxView
                    Color="Yellow"
                    WidthRequest="40"/>
                <Label
                    Text="Yellow"
                    FontSize="18"/>
            </HorizontalStackLayout>
        </Frame>
        <Frame>
            <HorizontalStackLayout Spacing="10">
                <BoxView
                    Color="Blue"
                    WidthRequest="40"/>
                <Label
                    Text="Blue"
                    FontSize="18"/>
            </HorizontalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>