<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="StudyingMaui.StudyingFlyoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    FlyoutLayoutBehavior="Split"
    Title="StudyingFlyoutPage">

    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout Menu" BackgroundColor="">

            <Label
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Text="Submenu"
                VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage>
            <Label
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Text="Detail"
                VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>