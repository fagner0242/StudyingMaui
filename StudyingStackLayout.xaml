<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudyingMaui.StudyingStackLayout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StudyingStackLayout">

    <HorizontalStackLayout Margin="0" Spacing="5">
        <Label
            BackgroundColor="Yellow"
            FontSize="20"
            Text="Texto 1" />
        <Label
            BackgroundColor="Blue"
            FontSize="20"
            Text="Texto 2" />


        <VerticalStackLayout>
            <Label
                BackgroundColor="Yellow"
                FontSize="20"
                Text="Texto 1" />
            <Label
                BackgroundColor="Blue"
                FontSize="20"
                Text="Text 2" />
        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentPage>