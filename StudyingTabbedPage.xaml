<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="StudyingMaui.StudyingTabbedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StudyingTabbedPage">

    <ContentPage BackgroundColor="#41a5ee" IconImageSource="Home">

        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
    </ContentPage>

    <ContentPage BackgroundColor="#2b7cd3" IconImageSource="dotnet_bot">

        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Im studying.NET MAUI!"
            VerticalOptions="Center" />
    </ContentPage>

    <ContentPage BackgroundColor="#185abd" IconImageSource="dotnet_bot">

        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Estou encantado estudando.NET MAUI!"
            VerticalOptions="Center" />
    </ContentPage>

    <ContentPage BackgroundColor="#113c8a" IconImageSource="settings">

        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="I hope to add a lot in the world of software development .NET MAUI!"
            VerticalOptions="Center" />
    </ContentPage>
</TabbedPage>