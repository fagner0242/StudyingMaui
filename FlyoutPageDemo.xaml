<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyingMaui.FlyoutPageDemo"
            FlyoutPage.FlyoutLayoutBehavior="Popover"
             Title="FlyoutPageDemo">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu" BackgroundColor="#2C2C54">
            <Label
                Text="Menu"
                FontSize="Large"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="Detail">
            <Label
                Text="Menu"
                FontSize="Large"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>