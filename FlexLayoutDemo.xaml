<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudyingMaui.FlexLayoutDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FlexLayoutDemo">
    <FlexLayout>
        <Label
            BackgroundColor="Red"
            FlexLayout.AlignSelf="Start"
            FontSize="Large"
            Text="Label 1" />
        <Label
            BackgroundColor="Blue"
            FlexLayout.AlignSelf="Center"
            FontSize="Large"
            Text="Label 2" />
        <Label
            BackgroundColor="Yellow"
            FlexLayout.AlignSelf="End"
            FontSize="Large"
            Text="Label 3" />
        <Label
            BackgroundColor="Orange"
            FlexLayout.AlignSelf="Auto"
            FontSize="Large"
            Text="Label 4" />
        <Label
            BackgroundColor="Yellow"
            FontSize="Large"
            Text="Label 3" />
        <Label
            BackgroundColor="Orange"
            FontSize="Large"
            Text="Label 4" />
    </FlexLayout>
</ContentPage>